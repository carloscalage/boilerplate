{
    "name": "boilerplate",
    "author": "Carlos",
    "description": "Minicurso boilerplate",
    "scripts": {
        "build": "npm-run-all --sequential build:views build:sass",
        "build:views": "pug src/views/ --out public/ --pretty",
        "start": "npm-run-all --sequential build",
        "build:sass": "node-sass src/assests/sass/main.scss public/css/main.css"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.5",
        "@babel/core": "^7.1.5",
        "chokidar-cli": "^1.2.1",
        "eslint": "^5.8.0",
        "node-sass": "^4.10.0",
        "npm-run-all": "^4.1.3",
        "pug-cli2": "^1.0.0-alpha6.1",
        "uglify-js": "^3.4.9"
    },
    "dependencies": {}
}
